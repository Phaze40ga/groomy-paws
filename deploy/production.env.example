#############################################
# Groomy Paws - Production Deployment Config
# Copy this file to deploy/production.env and
# update the values before running setup.
#############################################

# ---- Application ----
APP_DOMAIN=app.example.com            # Public domain that serves the SPA + proxies API
APP_DIR=/opt/groomy-paws              # Absolute path where the repo lives on the server
APP_USER=groomy                       # System user that will own and run the app
PORT=3001                             # Port for the Express API (nginx proxies to this)
NODE_MAJOR=20                         # Node.js major version to install if missing
SERVICE_NAME=groomy-paws-api          # systemd unit name
SERVER_ENV_PATH=/etc/groomy-paws/server.env

# ---- Database (MySQL) ----
INSTALL_MYSQL=true                    # Install mysql-server via apt (set false if using managed DB)
CONFIGURE_MYSQL=true                  # Create database/user using the admin credentials below
RUN_MIGRATIONS=true                   # Load mysql/schema.sql after provisioning DB
DB_HOST=localhost
DB_PORT=3306
DB_NAME=groomy_paws
DB_USER=groomy_app
DB_PASSWORD=change-me-db-password     # <- REQUIRED. Avoid quotes or spaces.
MYSQL_SUPER_USER=root                 # Admin user with privileges to create DB/users
MYSQL_SUPER_PASSWORD=                 # Leave empty if using socket auth on localhost

# ---- Backend Secrets ----
JWT_SECRET=please-change-me           # <- REQUIRED. Use a long random string.

# ---- Frontend Build ----
# Defaults to https://APP_DOMAIN/api if omitted. Override if using a different API host.
VITE_API_URL=https://app.example.com/api

# ---- Reverse Proxy / TLS ----
INSTALL_NGINX=true
INSTALL_CERTBOT=false                 # Set true to automatically request Let's Encrypt cert
LETSENCRYPT_EMAIL=ops@example.com     # Required when INSTALL_CERTBOT=true
NGINX_SITE=groomy-paws                # Name for the nginx site config (optional)


