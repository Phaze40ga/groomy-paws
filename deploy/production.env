#############################################
# Groomy Paws - Production Deployment Config
#############################################

# ---- Application ----
APP_DOMAIN=groomypawssalon.com
APP_DIR=/home/groomypaws/groomy-paws
APP_USER=groomypaws
PORT=3001
NODE_MAJOR=20
SERVICE_NAME=groomy-paws-api
SERVER_ENV_PATH=/etc/groomy-paws/server.env

# ---- Database (MySQL) ----
INSTALL_MYSQL=true
CONFIGURE_MYSQL=true
RUN_MIGRATIONS=true
DB_HOST=localhost
DB_PORT=3306
DB_NAME=groomy_paws
DB_USER=groomy_app
DB_PASSWORD=GroomyPaws2024!SecureDB#Pass
MYSQL_SUPER_USER=root
MYSQL_SUPER_PASSWORD=

# ---- Backend Secrets ----
JWT_SECRET=gp2024-jwt-secret-random-key-$(date +%s)-production-secure

# ---- Frontend Build ----
VITE_API_URL=https://groomypawssalon.com/api

# ---- Reverse Proxy / TLS ----
INSTALL_NGINX=true
INSTALL_CERTBOT=true
LETSENCRYPT_EMAIL=admin@groomypawssalon.com
NGINX_SITE=groomy-paws







